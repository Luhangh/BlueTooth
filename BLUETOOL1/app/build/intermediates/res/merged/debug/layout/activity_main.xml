<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg_color"
    android:orientation="vertical" >

   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height" 
    android:background="@color/oem_top_title">
    
	<TextView 
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yuanquan"
            />
        
        <TextView 
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="刷卡"
            android:textColor="@color/new_title_text"
            android:textSize="@dimen/default_title_text_size"
            
            />
          <TextView 
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="固件升级  "
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/new_title_text"
            android:textSize="16sp"
            />
</RelativeLayout>


    <TextView
        android:id="@+id/pbbt_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:background="@drawable/blue_tooth_connect_f"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="提示信息" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/default_subhead_textview_white"
            android:text="当前连接设备"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:id="@+id/bluetooth_name_now"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/default_subhead_textview_white"
            android:text="未连接"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:singleLine="true"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:background="@color/white"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/default_subhead_textview_white"
            android:text="当前锁定设备"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <TextView 
            android:id="@+id/bluetooth_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/default_subhead_textview_white"
            android:text="未连接"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    
    <Button 
        android:id="@+id/btn_connect_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_view_height"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="连接设备"
        style="@style/next"
        />



</LinearLayout>